<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trendyoluygulamasi.Views.Login.LoginFavorilerim">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>
            <StackLayout Grid.Row="1" Grid.Column="2" BackgroundColor="Transparent">
                <Frame CornerRadius="100" HeightRequest="120">
                    <Image Source="yildiz.png"/>
                </Frame>
            </StackLayout>
            <StackLayout Grid.Row="2" BackgroundColor="Transparent" Grid.ColumnSpan="5">
                <Label Text="Fırsat Ürünlerini Kaçırma" HorizontalOptions="Center" FontAttributes="Bold" FontSize="17"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <Label HorizontalTextAlignment="Center" Margin="0.5" Padding="0.5"  Grid.Column="1" Grid.ColumnSpan="3" TextColor="#9d9d9d" FontSize="12" FontAttributes="Bold" Text="Favorilerine eklenmiş fırsat ürünü bulamadık. "/>
                </Grid>
            </StackLayout>
            <Button Clicked="Urungorclick"   Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,10,0,0"  Text="Fırsat Ürünlerini Gör" TextColor="White" CharacterSpacing="1.5" CornerRadius="2" HeightRequest="55" BackgroundColor="#f27a1b"></Button>

        </Grid>
    </ContentPage.Content>

</ContentPage>